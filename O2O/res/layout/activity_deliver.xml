<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DeliverActivity" >

    <Button
        android:id="@+id/scan_order"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/scan_order" />

    <EditText
        android:id="@+id/input_no"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/scan_order_tip"
        android:gravity="center" />
    
    <TextView
        android:id="@+id/tip_order"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/tip_order"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/result_order"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="26sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/scan_box"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/scan_box" />

    <TextView
        android:id="@+id/tip_box"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/tip_box"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/result_box"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="26sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/input_no_box"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/scan_box_tip"
        android:gravity="center" />
    
    <Button
        android:id="@+id/unpacking"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/unpacking" />

    <TextView
        android:id="@+id/tip_error"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/deliver_error_tip"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/error"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="14sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/exit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/exit" />

</LinearLayout>